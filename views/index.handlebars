
<div class="container">
        <img href="/public/assets/img/eat-da-burger_logo.png" alt="eat-da-burger_logo">
        <h1 class="display-4">Eat-Da-Burger!</h1>
        <hr class="my-4">
        <div class="row d-flex justify-content-around">
            <div class="col-lg">
            <div class="card">
                <div class="card-header">
                    Burgers
                </div>
                <ul class="list-group list-group-flush m-3">
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devour=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            </div>
            <div class="col-lg">
            <div class="card">
                <div class="card-header">
                    Burgers Devoured
                </div>
                <ul class="list-group list-group-flush m-3">
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devour=true}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
            </div>
        </div>
        <div class="row d-flex justify-content-center m-3">
            <div class="col-lg">
            <div class="card">
                <div class="card-header">
                    Add Your Favorite Burger
                </div>
                <div class="card-body">
                    <form class="create-form">
                        <div class="form-group">
                            <textarea class="form-control text-center" id="burgerEntry" row="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-info">Submit</button>
                    </form>
                </div>
            </div>
            </div>
        </div>
    </div>
</div> 